    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/user-48.png" />
                            </image>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </ImageView>
                        <Label text="Cadastro de Livros">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <VBox maxWidth="600.0">
                            <children>
                                <Label text="Título:" />
                                <TextField fx:id="tfTitulo" promptText="João Silva" />
                                <Label text="Autor:">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="tfAutor" promptText="José de Alencar" />
                                <Label layoutX="10.0" layoutY="69.0" text="Assunto:">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="tfAssunto" layoutX="10.0" layoutY="86.0" promptText="Programacao" />
                                <Label text="ISBN (apenas dígitos):">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Label>
                        <TextField fx:id="tfISBN" promptText="123456789" />
                                <Label layoutX="30.0" layoutY="191.0" text="Ano de publicação:">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Label>
                        <TextField fx:id="tfAno" promptText="2024" />
                                    <Label text="Quantidade em estoque:">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                                    <TextField fx:id="tfEstoque" promptText="10" />
                                    <BorderPane>
                                        <right>
                                            <Button mnemonicParsing="false" text="CADASTRAR LIVRO" BorderPane.alignment="CENTER" />
                                        </right>
                                        <left>
                                            <Button mnemonicParsing="false" text="VOLTAR" BorderPane.alignment="CENTER" />
                                        </left>
                                        <VBox.margin>
                                            <Insets top="20.0" />
                                        </VBox.margin>
                                    </BorderPane>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                            </padding>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
